   </head>
   <body >
      <div class="navbar navbar-inverse navbar-fixed-top " >
         <div class="container">
            <div class="navbar-header">
               <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               </button>
               <a class="navbar-brand" href="{{ path('nidras_bookshelf_home') }}" ><strong style=""></strong> <i class="fa fa-book"></i> Nich <small >online library</small></a>
            </div>
            <div class="navbar-collapse collapse move-me">
               <ul class="nav navbar-nav navbar-right set-links">
                  <li><a href="{{ path('nidras_bookshelf_home') }}">HOME</a></li>
				  <li><a href="{{ path('nidras_bookshelf_list') }}" class="active-menu-item">LIST</a></li>
                  <li><a href="{{ path('nidras_bookshelf_about') }}">ABOUT</a></li>
               </ul>
            </div>
         </div>
      </div>
      <!--MENU SECTION END-->
      <section class="headline-sec">
         <div class="overlay ">
            <h3 >List <i class="fa fa-angle-double-right "></i></h3>
         </div>
      </section>
      <!--HOME SECTION END-->
      <section>
         <div class="container">
            <div class="row">
               <div class="col-md-12" style="min-height:800px;">
                  <div class="alert alert-info" >
                     Be respectful in modifications of books please.</a>
                  </div>
				    
				  <div id="table" class="table-editable">
					<table class="table">
					  <tr>
						<th>Title</th>
						<th>Author</th>
						<th>Editor</th>
						<th>Date</th>
						<th>Category</th>
						<th>Mark</th>
					  </tr>
					  {% for book in books %}
					  <tr class="clickable-row" data-href="{{ path('nidras_bookshelf_view', {'id': book.id}) }}">
						<td>{{ book.title }}</td>
						<td>{{ book.author }}</td>
						<td>{{ book.editor }}</td>
						<td>{{ book.date|date('d-m-Y') }}</td>
						<td>{{ book.category }}</td>
						<td><div class="row lead" style="margin-left:0px;margin-bottom:0px;">
						{% if book.mark > 0 %}
							{% for i in 0..book.mark-1 %}
						<span class="glyphicon .glyphicon-star-empty glyphicon-star"></span>
							{% endfor %}
						{% endif %}
						{% for i in 0..(5-book.mark-1) %}
						<span class="glyphicon .glyphicon-star-empty glyphicon-star-empty"></span>
						{% endfor %}
						</div></td>
					  </tr>
					  {% endfor %}
					</table>
				  </div>
				  
				    
					<p data-placement="top" data-toggle="tooltip" title="Add"><button class="btn btn-primary btn-info" data-title="Add" data-toggle="modal" data-target="#add" ><span class="glyphicon glyphicon-check"></span> Add my book !</button></p>
	
               </div>
            </div>
         </div>
      </section>
      <div style="height:2px;background-color:white;" ></div>
