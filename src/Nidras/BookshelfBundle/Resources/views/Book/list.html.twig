      <script src="{{ asset('assets/js/tab.js') }}"></script>
   </body>
   
   				
   <div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
	   <div class="modal-dialog">
		  <div class="modal-content">
		  {{ form_start(form_add) }}
		  {{ form_errors(form_add) }}
			 <div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
				<h4 class="modal-title custom_align" id="Heading">Add the book</h4>
			 </div>
			 <div class="modal-body">
				<div class="form-group">
					{{ form_widget(form_add.title, {'attr': {'class': 'form-control','placeholder': 'Title'}}) }}
				</div>
				<div class="form-group">
					{{ form_widget(form_add.author, {'attr': {'class': 'form-control','placeholder': 'Author'}}) }}
				</div>
				<div class="form-group">
					Date {{ form_widget(form_add.date, {'attr': {'class': 'form-control','placeholder': 'Date'}}) }} 
				</div>
				<div class="form-group">
					{{ form_widget(form_add.editor, {'attr': {'class': 'form-control','placeholder': 'Editor'}}) }}
				</div>
				<div class="form-group">
					{{ form_widget(form_add.publisher, {'attr': {'class': 'form-control','placeholder': 'Publisher'}}) }}
				</div>
				<div class="form-group">
					{{ form_widget(form_add.pages, {'attr': {'class': 'form-control','placeholder': 'Pages'}}) }}
				</div>
				<div class="form-group">
					{{ form_widget(form_add.category, {'attr': {'class': 'form-control','placeholder': 'Category'}}) }}
				</div>
				<div class="form-group">
					{{ form_widget(form_add.summary, {'attr': {'class': 'form-control','placeholder': 'Summary'}}) }}
				</div>
				<div class="form-group">
					Mark
					{{ form_widget(form_add.mark, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
				    {{ form_widget(form_add.comment, {'attr': {'class': 'form-control','placeholder': 'Comment'}}) }}
				</div>
			 </div>
			 <div class="modal-footer ">
				{{ form_widget(form_add.save, {'attr': {'class': 'btn btn-success btn-lg'}}) }}
			 </div>
		  {{ form_end(form_add) }}
		  </div>
	   </div>
	</div>
